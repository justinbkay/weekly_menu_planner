<div class="flex items-center">
  <div class="w-100 pv6 tc v-mid pv0 ph0">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="pv2">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autocomplete: 'first_name', autofocus: true %>
      </div>

      <div class="pv2">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autocomplete: 'last_name' %>
      </div>

      <div class="pv2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="pv2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="pv2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="pv2">
        <%= f.submit "Sign up", class: 'bw0 br2 bg-blue pa2 white fw5 tc ttc tracked' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
